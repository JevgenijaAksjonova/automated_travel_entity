<launch>
    <arg name="running_on_robot" default="True" />
    <rosparam file="$(find camera)/param.yaml" command="load"/>
	<include file="$(find realsense_camera)/launch/sr300_nodelet_rgbd.launch" if="$(arg running_on_robot)"/>
    <node name="obstacle_detection_node" pkg="obstacle_detection" type="obstacle_detection_node" output="screen"/>
    <node pkg="tf" type="static_transform_publisher" name="camera_static_transform" args="0.15 0.0 0.16 0 -0.285 0 -1 base_link camera_link 100" />
    <node pkg="tf" type="static_transform_publisher" name="pc_static_transform" args="0 0 0 0.511 -0.488 0.511 -0.488 camera_link camera_depth_optical_frame 100" />
</launch>
